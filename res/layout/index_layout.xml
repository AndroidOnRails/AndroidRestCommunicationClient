<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".IndexActivity">

    <ScrollView
                android:id="@+id/scroll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/btn_index" >
			    <TableLayout
			            android:id="@+id/post_table"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content" >
			    </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_new"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_index"
        android:layout_alignBottom="@+id/btn_index"
        android:layout_alignRight="@+id/scroll"
        android:text="@string/new_post" />

    <Button
        android:id="@+id/btn_index"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/scroll"
        android:layout_alignParentBottom="true"
        android:text="@string/get_all_post" />

</RelativeLayout>
